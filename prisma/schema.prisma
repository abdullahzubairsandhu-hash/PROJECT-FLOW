generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * =======================
 * USER (Clerk-backed)
 * =======================
 */
model User {
  id          String @id @default(cuid())
  clerkUserId String @unique

  email     String
  firstName String?
  lastName  String?
  imageUrl  String?
  designation  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects             Project[]
  memberships          ProjectMember[]
  createdTasks         Task[]                @relation("TaskCreator")
  assignedTasks        Task[]                @relation("TaskAssignee")
  comments             TaskComment[]
  taskCommentReactions TaskCommentReaction[]
  notifications        Notification[]
  resources            Resource[]
}

/**
 * =======================
 * PROJECT
 * =======================
 */
model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  status      ProjectStatus @default(ACTIVE)

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  tasks        Task[]
  members      ProjectMember[]
  resources    Resource[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * =======================
 * PROJECT MEMBER
 * =======================
 */
model ProjectMember {
  id        String      @id @default(cuid())
  userId    String
  projectId String
  role      ProjectRole @default(MEMBER)

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, projectId])
}

/**
 * =======================
 * TASK
 * =======================
 */
model Task {
  id          String       @id @default(cuid())
  title       String
  description String?
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  creatorId String
  creator   User   @relation("TaskCreator", fields: [creatorId], references: [id], onDelete: Cascade)

  assigneeId String?
  assignee   User?   @relation("TaskAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)

  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  comments  TaskComment[]
  executionItems ExecutionItem[]

  @@index([projectId])
  @@index([creatorId])
  @@index([assigneeId])
}

/**
 * =======================
 * TASK COMMENT
 * =======================
 */
model TaskComment {
  id      String @id @default(cuid())
  content String @db.Text

  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
  reactions TaskCommentReaction[]

  @@index([taskId])
  @@index([authorId])
}

/**
 * =======================
 * TASK COMMENT REACTION
 * =======================
 */
model TaskCommentReaction {
  id        String   @id @default(cuid())
  emoji     String
  commentId String
  userId    String
  createdAt DateTime @default(now())

  comment TaskComment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([commentId, userId, emoji])
  @@index([commentId])
}

/**
 * =======================
 * NOTIFICATIONS
 * =======================
 */
model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // e.g., "TASK_COMMENT"
  entityId  String   // The taskId or commentId
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

/**
 * =======================
 * EXECUTION TASKLIST ITEM
 * =======================
 */
model ExecutionItem {
  id        String   @id @default(cuid())
  content   String
  completed Boolean  @default(false)
  order     Int      @default(0)
  
  // Relation to Task
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([taskId])
}

/**
 * =======================
 * RESOURCE / ASSET
 * =======================
 */
model Resource {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String
  type        String   // e.g., "LINK", "PDF", "IMAGE", "DOC"
  
  projectId   String?  // Optional: if null, it's a "Global" resource
  project     Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  creatorId   String
  creator     User     @relation(fields: [creatorId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId])
  @@index([creatorId])
}


/**
 * =======================
 * ENUMS
 * =======================
 */
enum ProjectStatus {
  PLANNING
  ACTIVE
  COMPLETED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum ProjectRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}
